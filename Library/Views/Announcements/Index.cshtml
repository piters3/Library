@model IEnumerable<Library.Entities.Announcement>
@{
    ViewBag.Title = "Aktualności";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10 col-md-offset-1">

    @foreach (var item in Model) {
        <h2>@item.Title</h2>
        <p>@item.PublicationDate</p>
        <p>@item.Content.Substring(0, item.Content.Length < 150 ? item.Content.Length : 150) [...] @Html.ActionLink("więcej", "Details", "Announcements", new { id = item.AnnouncementId }, null)</p>
        <hr />

    }

</div>