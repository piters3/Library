@model Library.Entities.BookCopy
@{
    ViewBag.Title = "Szczegóły egzemplarza książki";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Breadcrumb{
    <div>
        <ul class="breadcrumb side">
            <li><i class="fa fa-home fa-lg"></i></li>
            <li><a href="@Url.Action("Index", "BookCopiesAdmin")">Zarządzanie egzemplarzami książek</a></li>
            <li>@ViewBag.Title</li>
        </ul>
    </div>
}

<div class="col-md-12">
    <div class="card">
        <h3 class="card-title">@ViewBag.Title "@Model.Book.Title"</h3>
        <div class="card-body">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Book.Title)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Book.Title)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Book.Author)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Book.Author)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Book.Category.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Book.Category.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Book.PublishedDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Book.PublishedDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Book.Pages)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Book.Pages)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Book.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Book.Description)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Amount)
                </dd>
            </dl>

            <p>
                @Html.ActionLink("Edytuj", "Edit", new { id = Model.BookCopyId }) |
                @Html.ActionLink("Powrót do listy", "Index")
            </p>

        </div>
    </div>
</div>
