@model IEnumerable<Library.Entities.BookCopy>
@{
    ViewBag.Title = "Egzemplarze książek";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@section Breadcrumb{
    <div>
        <h1>@ViewBag.Title</h1>
        <ul class="breadcrumb side">
            <li><i class="fa fa-home fa-lg"></i></li>
            <li>@ViewBag.Title</li>
        </ul>
    </div>
}

<div class="col-md-12">
    <div class="card">
        <a href="@Url.Action("Create", "BookCopiesAdmin")"><i class="fa fa-user-plus"></i>Nowy egzemplarz książki</a>
        <table class="table table-hover table-bordered" id="bookCopiesTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Book.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book.Print)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book.Category.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        Akcje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @item.Book.Title
                        </td>
                        <td>
                            @item.Book.Author
                        </td>
                        <td>
                            @item.Book.Print
                        </td>
                        <td>
                            @item.Book.Category.Name
                        </td>
                        <td>
                            @item.Amount
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "BookCopiesAdmin", new { id = item.BookCopyId })"><i cla><i class="fa fa-pencil-square-o"></i></a>
                            <a href="@Url.Action("Details", "BookCopiesAdmin", new { id = item.BookCopyId })"><i cla><i class="fa fa-eye"></i></a>
                            <a href="@Url.Action("Delete", "BookCopiesAdmin", new { id = item.BookCopyId })"><i cla><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/admin/dataTables")
    <script type="text/javascript">$('#bookCopiesTable').DataTable();</script>
}

