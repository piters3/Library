@model IEnumerable<Library.Entities.Book>
@{
    ViewBag.Title = "Książki";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Breadcrumb{
    <div>
        <h1>@ViewBag.Title</h1>
        <ul class="breadcrumb side">
            <li><i class="fa fa-home fa-lg"></i></li>
            <li>@ViewBag.Title</li>
        </ul>
    </div>
}

<div class="col-md-12">
    <div class="card">
        <a href="@Url.Action("Create", "BooksAdmin")"><i class="fa fa-user-plus"></i>Nowa książka</a>
        <table class="table table-hover table-bordered" id="booksTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Print)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PublishedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Pages)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        Akcje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.Author
                        </td>
                        <td>
                            @item.Print
                        </td>
                        <td>
                            @item.Category.Name
                        </td>
                        <td>
                            @item.PublishedDate.ToShortDateString()
                        </td>
                        <td>
                            @item.Pages
                        </td>
                        <td>
                            @item.Description.Substring(0, 50) [...]
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "BooksAdmin", new { id = item.BookId })"><i cla><i class="fa fa-pencil-square-o"></i></a>
                            <a href="@Url.Action("Details", "BooksAdmin", new { id = item.BookId })"><i cla><i class="fa fa-eye"></i></a>
                            <a href="@Url.Action("Delete", "BooksAdmin", new { id = item.BookId })"><i cla><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/admin/dataTables")
    <script type="text/javascript">$('#booksTable').DataTable();</script>
}

