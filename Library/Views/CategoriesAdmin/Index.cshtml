@model IEnumerable<Library.Entities.Category>
@{
    ViewBag.Title = "Kategorie książek";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Breadcrumb{
    <div>
        <h1>@ViewBag.Title</h1>
        <ul class="breadcrumb side">
            <li><i class="fa fa-home fa-lg"></i></li>
            <li>@ViewBag.Title</li>
        </ul>
    </div>
}

<div class="col-md-12">
    <div class="card">
        <a href="@Url.Action("Create", "CategoriesAdmin")"><i class="fa fa-user-plus"></i>Nowa kategoria</a>
        <table class="table table-hover table-bordered" id="categoriesTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        Akcje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "CategoriesAdmin", new { id = item.CategoryId })"><i class="fa fa-pencil-square-o"></i></a>
                            <a href="@Url.Action("Details", "CategoriesAdmin", new { id = item.CategoryId })"><i class="fa fa-eye"></i></a>
                            <a href="@Url.Action("Delete", "CategoriesAdmin", new { id = item.CategoryId })"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/admin/dataTables")
    <script type="text/javascript">$('#categoriesTable').DataTable();</script>
}

