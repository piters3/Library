@model IEnumerable<Library.Entities.Subject>
@{
    ViewBag.Title = "Zadane pytania";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>
                    Tytuł
                </th>
                <th>
                    Pytanie
                </th>
                <th>
                    Czytaj
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Messages.Last().Content
                    </td>
                    <td>
                        <a href="@Url.Action("Conversation", "Contact", new { id = item.SubjectId })"><i class="glyphicon glyphicon-envelope"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

