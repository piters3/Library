@model IEnumerable<Library.Entities.Opinion>
@{
    ViewBag.Title = "Opinie książek";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Breadcrumb{
    <div>
        <h1>@ViewBag.Title</h1>
        <ul class="breadcrumb side">
            <li><i class="fa fa-home fa-lg"></i></li>
            <li>@ViewBag.Title</li>
        </ul>
    </div>
}

<div class="col-md-12">
    <div class="card">
        <a href="@Url.Action("Create", "OpinionsAdmin")"><i class="fa fa-user-plus"></i>Nowa opinia</a>
        <table class="table table-hover table-bordered" id="opinionsTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.User.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Content)
                    </th>
                    <th>
                        Akcje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @item.User.UserName
                        </td>
                        <td>
                            @item.Book.Title
                        </td>
                        <td>
                            @item.Book.Author
                        </td>
                        <td>
                            @item.Content
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "OpinionsAdmin", new { id = item.OpinionId })"><i class="fa fa-pencil-square-o"></i></a>
                            <a href="@Url.Action("Details", "OpinionsAdmin", new { id = item.OpinionId })"><i class="fa fa-eye"></i></a>
                            <a href="@Url.Action("Delete", "OpinionsAdmin", new { id = item.OpinionId })"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/admin/dataTables")
    <script type="text/javascript">$('#opinionsTable').DataTable();</script>
}





