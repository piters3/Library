@model Library.Entities.Rating
@{
    ViewBag.Title = "Szczegóły oceny";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Breadcrumb{
    <div>
        <ul class="breadcrumb side">
            <li><i class="fa fa-home fa-lg"></i></li>
            <li><a href="@Url.Action("index", "RatingsAdmin")">Zarządzanie ocenami</a></li>
            <li>@ViewBag.Title</li>
        </ul>
    </div>
}

<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            Użytkownik:
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.User.UserName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.User.UserName)
                </dd>
                <dt>
                    Szczegóły użytkownika
                </dt>
                <dd>
                    @Html.ActionLink("Klik", "Details", "UsersAdmin", new { id = Model.UserId }, null)
                </dd>
            </dl>

            Oceninił:
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Book.Title)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Book.Title)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Book.Author)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Book.Author)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Book.Print)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Book.Print)
                </dd>
                <dt>
                    Szczegóły książki
                </dt>
                <dd>
                    @Html.ActionLink("Klik", "Details", "BooksAdmin", new { id = Model.BookId }, null)
                </dd>
            </dl>
            Na:
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Rate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Rate)
                </dd>
            </dl>
            <p>
                @Html.ActionLink("Edytuj", "Edit", new { id = Model.RatingId }) |
                @Html.ActionLink("Powrót do listy", "Index")
            </p>

        </div>
    </div>
</div>


