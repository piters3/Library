@model IEnumerable<Library.Entities.Rating>
@{
    ViewBag.Title = "Oceny książek";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Breadcrumb{
    <div>
        <h1>@ViewBag.Title</h1>
        <ul class="breadcrumb side">
            <li><i class="fa fa-home fa-lg"></i></li>
            <li>@ViewBag.Title</li>
        </ul>
    </div>
}

<div class="col-md-12">
    <div class="card">
        <a href="@Url.Action("Create", "RatingsAdmin")"><i class="fa fa-user-plus"></i>Nowa ocena</a>
        <table class="table table-hover table-bordered" id="ratingsTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.User.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Rate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Opinion)
                    </th>
                    <th>
                        Akcje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @item.User.UserName
                        </td>
                        <td>
                            @item.Book.Title
                        </td>
                        <td>
                            @item.Book.Author
                        </td>
                        <td>
                            @item.Rate
                        </td>
                        <td>
                            @if (item.Opinion == null) {
                                @:Brak
                            } else {
                                @item.Opinion
                           }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "RatingsAdmin", new { id = item.RatingId })"><i class="fa fa-pencil-square-o"></i></a>
                            <a href="@Url.Action("Details", "RatingsAdmin", new { id = item.RatingId })"><i class="fa fa-eye"></i></a>
                            <a href="@Url.Action("Delete", "RatingsAdmin", new { id = item.RatingId })"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/admin/dataTables")
    <script type="text/javascript">$('#ratingsTable').DataTable();</script>
}





