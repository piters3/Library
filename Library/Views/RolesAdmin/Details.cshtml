@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Szczegóły roli " + '"' + Model.Name + '"';
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Breadcrumb{
    <div>
        <h1>@ViewBag.Title</h1>
        <ul class="breadcrumb side">
            <li><i class="fa fa-home fa-lg"></i></li>
            <li><a href="@Url.Action("Index", "RolesAdmin")">Zarządznie rolami</a></li>
            <li>@ViewBag.Title</li>
        </ul>
    </div>
}
<div class="col-md-6">
    <div class="card">
        <h3 class="card-title">@ViewBag.Title</h3>
        <div class="card-body">
            <dl class="dl-horizontal">
                <dt>
                    Nazwa
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>

            @if (ViewBag.UserCount == 0) {
                <hr />
                <p>Brak użytkowników w tej roli</p>
            } else {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                Lista użytkowników w tej roli
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Users) {
                            <tr>
                                <td>
                                    @item.UserName
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            <p>
                @Html.ActionLink("Edytuj", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("Powrót do listy", "Index")
            </p>



        </div>
    </div>
</div>
