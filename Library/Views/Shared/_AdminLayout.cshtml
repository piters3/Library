<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Panel Administratora</title>
    @Styles.Render("~/Content/Admin/css")

</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
            <div class="logo"><h1>Panel administracyjny</h1></div>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
    </div>

    <div class="template-page-wrapper">
        <div class="navbar-collapse collapse templatemo-sidebar">
            <ul class="templatemo-sidebar-menu">
                <li class="active"><a href="@Url.Action("Index", "PanelAdmin")"><i class="fa fa-users"></i>Dashboard</a></li>
                <li><a href="@Url.Action("Index", "UsersAdmin")"><i class="fa fa-users"></i>Zarządzaj użytkownikami</a></li>
                <li><a href="@Url.Action("Index", "RolesAdmin")"><i class="fa fa-key"></i>Zarządzaj rolami</a></li>
                <li><a href="#"><i class="fa fa-cog"></i>Ustawienia</a></li>
                <li><a href="#"><i class="fa fa-sign-out"></i>Wyloguj się</a></li>
            </ul>
        </div>

        <div class="templatemo-content-wrapper">
            <div class="templatemo-content">

                @if (TempData["message"] != null) {
                    <div class="alert alert-dismissible alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Świetnie!</strong> @TempData["message"]
                    </div>
                }
                @RenderBody()
            </div>
        </div>
        <footer class="templatemo-footer">
            <div class="templatemo-copyright">
                <p>&copy; @DateTime.Now.Year - Biblioteka Piotera</p>
            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/admin/jquery")
    @Scripts.Render("~/bundles/admin/bootstrap")
    @Scripts.Render("~/bundles/admin/templatemo_script")
    @RenderSection("scripts", required: false)

</body>
</html>